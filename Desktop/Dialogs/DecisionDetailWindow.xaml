<Window x:Class="Toplanti.Dialogs.DecisionDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Karar Detayı" Height="500" Width="700"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" x:Name="txtTitle" FontSize="18" FontWeight="Bold" Margin="5"/>
        <TextBlock Grid.Row="1" x:Name="txtDescription" TextWrapping="Wrap" Margin="5"/>
        
        <DataGrid Grid.Row="2" x:Name="dgVotes" AutoGenerateColumns="False" Margin="5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Birim No" Binding="{Binding Unit.Number}" Width="100"/>
                <DataGridTextColumn Header="Mal Sahibi" Binding="{Binding Unit.OwnerName}" Width="*"/>
                <DataGridTextColumn Header="Arsa Payı" Binding="{Binding Unit.LandShare, StringFormat=F2}" Width="100"/>
                <DataGridTextColumn Header="Oy" Binding="{Binding VoteType}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <StackPanel Grid.Row="3" Margin="5">
            <TextBlock x:Name="txtResults" TextWrapping="Wrap" FontWeight="Bold"/>
            <TextBlock x:Name="txtStatus" TextWrapping="Wrap" Margin="0,5,0,0" FontSize="14"/>
        </StackPanel>
    </Grid>
</Window>

