<Window x:Class="Toplanti.Dialogs.BlockUnitManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Site ve Daire Yönetimi" Height="750" Width="1100"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Site Bilgileri -->
        <GroupBox Grid.Row="0" Header="Site Bilgileri" Margin="5" Padding="10" x:Name="grpSiteInfo">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="Site Adı:" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Column="1" x:Name="txtSiteName" Margin="5"/>
                
                <TextBlock Grid.Column="2" Text="Toplam Arsa Payı:" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Column="3" x:Name="txtTotalLandShare" Margin="5"/>
                
                <Button Grid.Column="4" Content="Site Oluştur/Seç" x:Name="btnCreateOrSelectSite" Click="BtnCreateOrSelectSite_Click" Margin="5"/>
                <Button Grid.Column="5" Content="Tüm Verileri Sil" x:Name="btnDeleteAllData" Click="BtnDeleteAllData_Click" Margin="5" Background="#E74C3C" Foreground="White"/>
            </Grid>
        </GroupBox>
        
        <!-- Blok ve Daire Sayısı Girişi -->
        <GroupBox Grid.Row="1" Header="Blok ve Daire Bilgileri" Margin="5" Padding="10" IsEnabled="{Binding ElementName=btnCreateOrSelectSite, Path=Tag}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="Blok Adı:" VerticalAlignment="Center" Margin="5"/>
                    <TextBox Grid.Column="1" x:Name="txtBlockName" Margin="5"/>
                    
                    <TextBlock Grid.Column="2" Text="Daire Sayısı:" VerticalAlignment="Center" Margin="5"/>
                    <TextBox Grid.Column="3" x:Name="txtUnitCount" Margin="5"/>
                    
                    <TextBlock Grid.Column="4" Text="Birim Tipi:" VerticalAlignment="Center" Margin="5"/>
                    <ComboBox Grid.Column="5" x:Name="cmbUnitType" DisplayMemberPath="Name" Margin="5"
                              IsEditable="True" IsTextSearchEnabled="True" TextBoxBase.TextChanged="CmbUnitType_TextChanged"
                              FontSize="14" Height="32"/>
                    
                    <Button Grid.Column="6" Content="Daireleri Oluştur" x:Name="btnCreateUnits" Click="BtnCreateUnits_Click" Margin="5"/>
                </Grid>
                
                <Grid Grid.Row="1" Margin="0,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="Daire Başına Arsa Payı (Boş bırakılırsa otomatik hesaplanır):" VerticalAlignment="Center" Margin="5"/>
                    <TextBox Grid.Column="1" x:Name="txtUnitLandShare" Margin="5"/>
                    <TextBlock Grid.Column="2" Text="(0 girilirse otomatik hesaplanır)" VerticalAlignment="Center" Margin="5" FontStyle="Italic" Foreground="Gray"/>
                </Grid>
            </Grid>
        </GroupBox>
        
        <!-- Toplu Arsa Payı Girişi -->
        <GroupBox Grid.Row="2" Header="Toplu Arsa Payı Girişi" Margin="5" Padding="10" IsEnabled="{Binding ElementName=btnCreateOrSelectSite, Path=Tag}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="Filtrelenmiş Daireler İçin Arsa Payı:" VerticalAlignment="Center" Margin="5"/>
                    <TextBox Grid.Column="1" x:Name="txtBulkLandShare" Margin="5"/>
                    
                    <TextBlock Grid.Column="2" Text="Eşit Dağıt:" VerticalAlignment="Center" Margin="5"/>
                    <CheckBox Grid.Column="3" x:Name="chkDistributeEqually" IsChecked="True" VerticalAlignment="Center" Margin="5"/>
                    
                    <Button Grid.Column="4" Content="Filtrelenmişlere Uygula" x:Name="btnApplyBulk" Click="BtnApplyBulk_Click" Margin="5"/>
                </Grid>
                
                <Grid Grid.Row="1" Margin="0,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="Blok Bazında Arsa Payı:" VerticalAlignment="Center" Margin="5"/>
                    <TextBox Grid.Column="1" x:Name="txtBlockLandShare" Margin="5"/>
                    <Button Grid.Column="2" Content="Bloğa Uygula" x:Name="btnApplyBlockLandShare" Click="BtnApplyBlockLandShare_Click" Margin="5"/>
                </Grid>
            </Grid>
        </GroupBox>
        
        <!-- Filtreleme -->
        <GroupBox Grid.Row="3" Header="Filtreleme" Margin="5" Padding="10" IsEnabled="{Binding ElementName=btnCreateOrSelectSite, Path=Tag}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="Blok:" VerticalAlignment="Center" Margin="5"/>
                <ComboBox Grid.Column="1" x:Name="cmbFilterBlock" Margin="5" SelectionChanged="CmbFilterBlock_SelectionChanged"
                          IsEditable="True" IsTextSearchEnabled="True" TextBoxBase.TextChanged="CmbFilterBlock_TextChanged"
                          FontSize="14" Height="32"/>
                
                <TextBlock Grid.Column="2" Text="Ara:" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Column="3" x:Name="txtFilter" Margin="5" TextChanged="TxtFilter_TextChanged"/>
                <Button Grid.Column="4" Content="Filtre Temizle" x:Name="btnClearFilter" Click="BtnClearFilter_Click" Margin="5" Width="120"/>
                
                <Button Grid.Column="5" Content="Tümünü Seç / Seçimi Kaldır" x:Name="btnToggleSelectAll" Click="BtnToggleSelectAll_Click" Margin="5" Width="180"/>
                <Button Grid.Column="6" Content="Filtrelenmişleri Sil" x:Name="btnDeleteFiltered" Click="BtnDeleteFiltered_Click" Margin="5" Background="#E74C3C" Foreground="White"/>
                <Button Grid.Column="7" Content="Blok Sil" x:Name="btnDeleteBlock" Click="BtnDeleteBlock_Click" Margin="5" Background="#C0392B" Foreground="White"/>
            </Grid>
        </GroupBox>
        
        <!-- Daire Listesi -->
        <DataGrid Grid.Row="4" x:Name="dgUnits" AutoGenerateColumns="False" Margin="5" SelectionMode="Extended" 
                  CanUserAddRows="False" CanUserDeleteRows="False" SelectionChanged="DgUnits_SelectionChanged"
                  MouseDoubleClick="DgUnits_MouseDoubleClick" ContextMenuOpening="DgUnits_ContextMenuOpening">
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Arsa Payi Degistir" Click="MenuItem_ChangeLandShare_Click"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Seç" Width="50">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}" 
                                     HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Daire No" Binding="{Binding Number}" Width="100" IsReadOnly="True"/>
                <DataGridTextColumn Header="Blok" Binding="{Binding Block}" Width="80" IsReadOnly="True"/>
                <DataGridTextColumn Header="Ad" Binding="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" Width="120"/>
                <DataGridTextColumn Header="Soyad" Binding="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" Width="120"/>
                <DataGridTextColumn Header="Telefon" Binding="{Binding Phone, UpdateSourceTrigger=PropertyChanged}" Width="130"/>
                <DataGridTextColumn Header="E-posta" Binding="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Width="180"/>
                <DataGridTextColumn Header="Arsa Payı" Binding="{Binding LandShare, StringFormat=F2, UpdateSourceTrigger=PropertyChanged}" Width="100"/>
                <DataGridTextColumn Header="Tip" Binding="{Binding UnitTypeName}" Width="80" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <!-- Butonlar -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <TextBlock x:Name="txtSiteInfo" VerticalAlignment="Center" Margin="5" FontWeight="Bold" Foreground="#2C3E50"/>
            <Button Content="Seçili Daireleri Güncelle" x:Name="btnUpdateSelected" Click="BtnUpdateSelected_Click" Width="150" Margin="5"/>
            <Button Content="Tümünü Kaydet" x:Name="btnSaveAll" Click="BtnSaveAll_Click" Width="120" Margin="5"/>
            <Button Content="Kapat" x:Name="btnClose" Click="BtnClose_Click" Width="100" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
