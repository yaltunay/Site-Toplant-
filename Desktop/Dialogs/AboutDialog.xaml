<Window x:Class="Toplanti.Dialogs.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hakkinda" Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Uygulama Logosu -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Image Source="pack://application:,,,/Images/AppLogo.png" Width="120" Height="120" Stretch="Uniform" Margin="0,0,0,10"/>
            <TextBlock Text="Toplanti ve Karar Yonetim Sistemi" 
                      FontSize="20" FontWeight="Bold" 
                      HorizontalAlignment="Center" Margin="0,0,0,5"/>
            <TextBlock Text="Versiyon 1.0.0" 
                      FontSize="14" Foreground="#666666" 
                      HorizontalAlignment="Center"/>
        </StackPanel>
        
        <!-- Bilgiler -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <TextBlock Text="KMK 30-31 Uyumlu Toplanti ve Karar Yonetim Sistemi" 
                      FontSize="14" TextWrapping="Wrap" 
                      HorizontalAlignment="Center" Margin="0,0,0,15"/>
            <TextBlock Text="Bu uygulama, site yonetimi toplantilarini ve kararlarini yonetmek icin tasarlanmistir." 
                      FontSize="12" TextWrapping="Wrap" 
                      HorizontalAlignment="Center" Foreground="#666666" Margin="0,0,0,10"/>
            <TextBlock Text="Telif Hakki Â© 2025" 
                      FontSize="11" 
                      HorizontalAlignment="Center" Foreground="#999999"/>
        </StackPanel>
        
        <!-- Sirket Logosu -->
        <StackPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Gelistirici" FontSize="12" FontWeight="Bold" 
                      HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <Image Source="pack://application:,,,/Images/CompanyLogo.png" Width="150" Height="80" Stretch="Uniform"/>
        </StackPanel>
        
        <!-- Kapat Butonu -->
        <Button Grid.Row="3" Content="Tamam" x:Name="btnOk" Click="BtnOk_Click" 
                Width="100" Height="35" HorizontalAlignment="Center" 
                Margin="0,20,0,0" FontSize="14"/>
    </Grid>
</Window>
