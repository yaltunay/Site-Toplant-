<Window x:Class="Toplanti.Dialogs.CreateMeetingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Yeni Toplanti Olustur" Height="200" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Toplanti Basligi:" VerticalAlignment="Center" Margin="5" FontWeight="Bold"/>
        <TextBox Grid.Row="1" x:Name="txtMeetingTitle" Margin="5" Height="36" FontSize="14" Padding="8,6" VerticalContentAlignment="Center"/>
        
        <TextBlock Grid.Row="2" Text="Toplanti Tarihi:" VerticalAlignment="Center" Margin="5" FontWeight="Bold"/>
        <DatePicker Grid.Row="3" x:Name="dpMeetingDate" Margin="5" Height="30" FontSize="14"/>
        
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button Content="Kaydet" x:Name="btnSave" Click="BtnSave_Click" Width="100" Height="35" Margin="5" IsDefault="True"/>
            <Button Content="Iptal" x:Name="btnCancel" Click="BtnCancel_Click" Width="100" Height="35" Margin="5" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>

