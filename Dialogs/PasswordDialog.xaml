<Window x:Class="Toplanti.Dialogs.PasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Şifre Girişi" Height="200" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Lutfen sifre girin:" FontSize="14" Margin="0,0,0,10"/>
        
        <PasswordBox Grid.Row="1" x:Name="txtPassword" Margin="0,0,0,20" FontSize="14" Height="36" Padding="8,6" VerticalContentAlignment="Center" KeyDown="TxtPassword_KeyDown"/>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Tamam" x:Name="btnOk" Click="BtnOk_Click" Width="80" Margin="5"/>
            <Button Content="Iptal" x:Name="btnCancel" Click="BtnCancel_Click" Width="80" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>

