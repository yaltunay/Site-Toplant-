<Window x:Class="Toplanti.Dialogs.MinutesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Toplantı Tutanağı" Height="700" Width="900"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <TextBox x:Name="txtMinutes" TextWrapping="Wrap" AcceptsReturn="True" 
                    IsReadOnly="True" FontFamily="Consolas" FontSize="12" 
                    VerticalScrollBarVisibility="Auto"/>
        </ScrollViewer>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button Content="Kopyala" x:Name="btnCopy" Click="BtnCopy_Click" Width="100" Margin="5"/>
            <Button Content="Kapat" x:Name="btnClose" Click="BtnClose_Click" Width="100" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>

