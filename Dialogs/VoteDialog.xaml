<Window x:Class="Toplanti.Dialogs.VoteDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Oylama" Height="500" Width="600"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" x:Name="txtDecisionInfo" TextWrapping="Wrap" Margin="5" FontWeight="Bold"/>
        
        <DataGrid Grid.Row="1" x:Name="dgUnits" AutoGenerateColumns="False" Margin="5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Birim No" Binding="{Binding Number}" Width="100" IsReadOnly="True"/>
                <DataGridTextColumn Header="Mal Sahibi" Binding="{Binding OwnerName}" Width="*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Arsa Payı" Binding="{Binding LandShare, StringFormat=F2}" Width="100" IsReadOnly="True"/>
                <DataGridTemplateColumn Header="Oy" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox SelectedValuePath="Value" DisplayMemberPath="Key" x:Name="cmbVote" Loaded="CmbVote_Loaded" Margin="2"
                                      IsEditable="True" IsTextSearchEnabled="True" FontSize="14" Height="28"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button Content="Tamam" x:Name="btnOk" Click="BtnOk_Click" Width="80" Margin="5"/>
            <Button Content="İptal" x:Name="btnCancel" Click="BtnCancel_Click" Width="80" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>

